{
  "extends": ["tslint-config-alloy"],
  "linterOptions": {
      "exclude": ["**/node_modules/**"]
  },
  "rules": {
    "indent": [true, "spaces", 2],
    "ordered-imports": false,
    "no-inferrable-types": false,
    "no-var-requires": false,
    "trailing-comma": [
      true,
      {
        "multiline": {
          "objects": "always",
          "arrays": "always",
          "functions": "never",
          "typeLiterals": "ignore"
        },
        "esSpecCompliant": true
      }
    ]
  }
}