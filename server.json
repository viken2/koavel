{
  "apps": [
    {
      "name": "koavel-app",
      "script": "./app.js",
      "watch": true,
      "ignore_watch": [
        "./.git",
        "node_modules",
        "storage",
        "benchmarks",
        "tests",
        "docs"
      ],
      "watch_options": {
        "followSymlinks": false
      },
      "kill_timeout": 3000,
      "error_file": "storage/pm2/app_err.log",
      "out_file": "storage/pm2/app_out.log",
      "merge_logs": true,
      "log_date_format": "YYYY-MM-DD HH:mm Z",
      "env_dev": {
        "NODE_ENV": "development",
        "NODE_CONFIG_STRICT_MODE": true,
        "PORT": 3128
      },
      "env_test": {
        "NODE_ENV": "testing",
        "NODE_CONFIG_STRICT_MODE": true,
        "PORT": 3128
      },
      "env": {
        "NODE_ENV": "production",
        "NODE_CONFIG_STRICT_MODE": true,
        "PORT": 3128
      },
      "instances": 4,
      "max_memory_restart": "500M",
      "exec_mode": "cluster"
    },
    {
      "name": "koavel-queue",
      "script": "./queue.js",
      "watch": true,
      "ignore_watch": [
        "./.git",
        "node_modules",
        "storage",
        "benchmarks",
        "tests",
        "docs"
      ],
      "watch_options": {
        "followSymlinks": false
      },
      "kill_timeout": 3000,
      "error_file": "storage/pm2/queue_err.log",
      "out_file": "storage/pm2/queue_out.log",
      "merge_logs": true,
      "log_date_format": "YYYY-MM-DD HH:mm Z",
      "env_dev": {
        "NODE_ENV": "development",
        "NODE_CONFIG_STRICT_MODE": true
      },
      "env_test": {
        "NODE_ENV": "testing",
        "NODE_CONFIG_STRICT_MODE": true
      },
      "env": {
        "NODE_ENV": "production",
        "NODE_CONFIG_STRICT_MODE": true
      },
      "instances": 1,
      "max_memory_restart": "1024M",
      "exec_mode": "fork"
    }
  ]
}